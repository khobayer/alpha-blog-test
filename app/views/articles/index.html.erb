<h1>List of Articles</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |arts| %>
            <tr>
                <td><%= arts.title%></td>
                <td><%= arts.description%></td>
                <td><%= link_to 'Show', article_path(arts) %></td>
                <td><%= link_to 'Edit', edit_article_path(arts) %></td>
                <td><%= button_to 'Delete', article_path(arts), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>