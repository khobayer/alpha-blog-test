<h1>List of Articles</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |arts| %>
            <tr>
                <td><%= arts.title%></td>
                <td><%= arts.description%></td>
                <td><%= link_to 'Show', article_path(arts) %></td>
                <td><%= link_to 'Edit', edit_article_path(arts) %></td>
                <td><%= link_to "Delete", article_path(arts), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p>
    <%= link_to "Create Article", new_article_path %>
</p>